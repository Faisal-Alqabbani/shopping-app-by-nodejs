{{#if errorMessage}}
    <div id="payment-errors" class="alert alert-danger text-center">
        {{errorMessage}}
    </div>
    
{{/if}}
<div id="payment-errors" class="alert alert-danger d-none text-center">

</div>
<div style="padding-top: 30px;" class="col-md-6 offset-md-3">
    <form action="/checkout" method="post" id="checkout-form">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="" placeholder="Enter Your Name">
        </div>

        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" name="address" id="" placeholder="Enter Your Address">
        </div>


        <div class="form-group">
            <label for="credit-card-name">Credit Card Name</label>
            <input type="text" class="form-control" name="credit-card-name" id="" placeholder="Enter Credit Card Name">
        </div>

        <div class="form-group">
            <label for="credit-card-number">Credit Card Number</label>
            <input type="number" class="form-control" name="credit-card-number" id="card-number"
                placeholder="Enter Credit Card Number">
        </div>
        <div class="row">
            <div class="col-md-6">
                 <div class="form-group">
            <label for="credit-card-expire-month">Expire Month</label>
            <input type="number" class="form-control" name="credit-card-expire-month" id="card-expiry-month"
                placeholder="Enter Credit Card Expire Month">
        </div>

        <div class="form-group">
            <label for="credit-card-cvv">CVC</label>
            <input type="number" class="form-control" name="credit-card-cvc" id="card-cvc"
                placeholder="CVC">
        </div>
            </div>
        <div class="col-md-6">
            <div class="form-group">
            <label for="credit-card-expire-year">Expire Year</label>
            <input type="number" class="form-control" name="credit-card-expire-day" id="card-expiry-year"
                placeholder="Enter Credit Card Expire Day">
            </div>

            </div>
        </div>
        <button type="submit" class="btn btn-success btn-block">Checkout {{totalprice}}$</button>
       

    


    </form>


</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="../javascripts/checkout.js"></script>

